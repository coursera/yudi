mixin university-link(university, classes)
  a.university-link(href=university.getLink(), class=classes)
    if block
      block

//- some comment
mixin c-time-commitment(momentObj, classes)
  - var seconds = momentObj.seconds();
  - var minutes = momentObj.minutes() + Math.round(seconds/60);
  - var hours = momentObj.hours();
  span(class=classes)
    if hours
      - minutes = ('0' + minutes.toString()).slice(-2);
      | #{hours}h #{minutes}m
    else if minutes
      | #{minutes} min
    else if seconds !== 0
      | #{seconds} sec
